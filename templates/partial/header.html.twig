{# templates/partial/header.html.twig #}
<div>
	{% if app.user %}
		{# Je suis connecté #}
		<a href="{{ path('app_logout') }}">Se déconnecter</a>

		{% if is_granted('ROLE_ADMIN') %}
			<a href="{{ path('app_admin')}}">Administration</a>
		{% endif %}
	{% else %}
		{# Je suis pas connecté #}
		<a href="{{ path('app_login') }}">Se connecter</a>
		<a href="{{ path('app_register') }}">S'enregistrer</a>
	{% endif %}
	<a href="{{ path('app_contact') }}">Nous contacter</a>
</div>
